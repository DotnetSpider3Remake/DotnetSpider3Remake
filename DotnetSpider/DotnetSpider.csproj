<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net5</TargetFrameworks>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Product>DotnetSpider 3 Remake</Product>
    <PackageId>DotnetSpider3Remake</PackageId>
    <Authors>sanjusss@qq.com</Authors>
    <Description>A .NET Standard web crawling library similar to WebMagic and Scrapy.  
It is a remake of DotnetSpider 3.x.</Description>
    <Copyright>Copyright (c) 2020 DotnetSpider 3 Remake</Copyright>
    <PackageProjectUrl>https://github.com/DotnetSpider3Remake/DotnetSpider3Remake</PackageProjectUrl>
    <RepositoryUrl>https://github.com/DotnetSpider3Remake/DotnetSpider3Remake</RepositoryUrl>
    <RepositoryType>GIT</RepositoryType>
    <Version>0.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>DotnetSpider;crawler;dotnet core</PackageTags>
    <LangVersion>8.0</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" Version="1.11.30" />
    <PackageReference Include="K4os.Compression.LZ4" Version="1.2.6" />
    <PackageReference Include="log4net" Version="2.0.12" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="System.Text.Encoding.CodePages" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Logger\log4ds3r.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
